<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info3604.assignment_organizer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.CheckpointList"></activity>
        <activity android:name=".views.CourseList" />
        <activity android:name=".views.AssignmentList" />
        <activity android:name=".views.View_Course" />
        <activity android:name=".views.View_Assignment" />
        <activity android:name=".views.NotificationActivity" />

        <receiver android:name=".controllers.NotifController">
            <intent-filter>
                <action android:name="action.DISPLAY_NOTIFICATION" />
            </intent-filter>
        </receiver>

        <activity android:name=".views.add_checkpoint" />
        <activity android:name=".views.add_course" />
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.add_assignment" />
    </application>

</manifest>